/* Special styling for both buttons */
.vertical-actions-column .notes-button,
.vertical-actions-column .forms-button {
  position: relative;
  overflow: visible;
  opacity: 1;
  transform: scale(1);
  transition: var(--transition-standard), transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
