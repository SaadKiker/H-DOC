  width: 20px; /* Fixed size icon */
  height: 20px; /* Fixed size icon */
  color: white;
  fill: white;
  stroke: white;
  position: relative; /* Ensure proper stacking */
  z-index: 2; /* Make sure it's above other elements */
  min-width: 20px; /* Prevent icon from shrinking */
  min-height: 20px; /* Prevent icon from shrinking */
}

/* Active/pressed state for notes button */
.vertical-actions-column .notes-button:active {
  transform: translateY(0);
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.25), 0 0 0 2px rgba(255, 255, 255, 0.1);
  background-color: #002f33; /* Darker shade when pressed */
}

/* Increase the pulse size to match the larger button */
@keyframes pulse-animation {
  0% {
    transform: scale(1);
    opacity: 0.5;
    box-shadow: 0 0 0 0 rgba(0, 71, 77, 0.5);
  }
  50% {
    transform: scale(1.35); /* Larger pulse ratio */
    opacity: 0;
    box-shadow: 0 0 0 15px rgba(0, 71, 77, 0);
  }
  100% {
    transform: scale(1);
    opacity: 0;
    box-shadow: 0 0 0 0 rgba(0, 71, 77, 0);
  }
}

/* Notes panel */
.notes-panel {
  position: fixed;
  top: 60px; /* Match the height of profile-header */
  right: 0;
  width: 25%; /* Use percentage instead of fixed width */
  height: calc(100vh - 60px); /* Subtract header height from full viewport height */
  background-color: white;
  box-shadow: -4px 0 10px rgba(0, 0, 0, 0.1);
  border-left: 2px solid #1E513B; /* Add a distinct border for visual separation */
  z-index: 900;
  display: flex;
  flex-direction: column;
  transform: translateX(100%); /* Start fully off-screen */
  transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1); /* Improved animation curve */
  will-change: transform;
  pointer-events: auto; /* Make sure it's interactive */
}

/* Opening slower with smoother easing */
.notes-panel.open {
  transform: translateX(0); /* Slide in */
  transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1); /* Slower opening */
}

/* Main content shift when notes panel is open */
.profile-content.notes-open {
  margin-right: 25%; /* Match the notes panel width */
  transition: margin-right 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

/* Notes panel header shift - remove margin to keep header in place */
.notes-open .profile-header {
  margin-right: 0; /* No shifting of header */
}

/* Notes panel vertical actions column movement */
.notes-open .vertical-actions-column {
  right: calc(25% + 20px); /* Panel width + some spacing */
}

/* Forms panel */
.forms-panel {
  position: fixed;
  top: 60px; /* Match the height of the profile-header */
  right: 0;
  width: 25%; /* Use percentage instead of fixed width */
  height: calc(100vh - 60px); /* Subtract header height from full viewport height */
  background-color: white;
  box-shadow: -4px 0 10px rgba(0, 0, 0, 0.1);
  border-left: 2px solid #1E513B; /* Add a distinct border for visual separation */
  z-index: 900;
  display: flex;
  flex-direction: column;
  transform: translateX(100%); /* Start fully off-screen */
  transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1); /* Improved animation curve */
  will-change: transform, width;
  pointer-events: auto; /* Make sure it's interactive */
}

/* Opening slower with smoother easing */
.forms-panel.open {
  transform: translateX(0); /* Slide in */
  transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1); /* Slower opening */
}

/* Expanded panel when form is selected */
.forms-panel.expanded {
  width: 45%; /* Use percentage instead of viewport width (vw) */
  max-width: 800px;
  transition: width 0.4s cubic-bezier(0.16, 1, 0.3, 1), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

/* When both forms and notes are open (though this shouldn't happen in practice) */
.profile-content.forms-open.notes-open {
  margin-right: 25%; /* Use percentage-based width */
}

/* Main content shift when forms panel is open */
.profile-content.forms-open {
  margin-right: 25%; /* Match the regular panel width */
  max-width: 75%; /* 100% - panel width */
  transition: margin-right 0.6s cubic-bezier(0.16, 1, 0.3, 1), max-width 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

