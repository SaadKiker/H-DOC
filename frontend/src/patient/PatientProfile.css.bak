  animation: pulse-animation 2s infinite;
}

/* Hover state for notes button specifically */
.vertical-actions-column .notes-button:hover {
  background: #003a3e; /* Darker shade on hover */
  transform: translateY(-3px); /* Slightly more lift on hover */
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.35), 0 0 0 3px rgba(255, 255, 255, 0.15); /* Enhanced hover effect */
  color: white;
}

/* Ensure pen icon is white and larger size */
